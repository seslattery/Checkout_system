<% provide(:title, 'Checkout') %>
<h1>Checkout</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>
      <% render 'shared/error_messages' %>

      <%= f.label "Item Name" %>
      <%= f.text_field :name %>

      <%= f.label 'Chem ID' %>
      <%= f.text_field :chemID %>


      <%= f.submit "Checkout", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>