<% provide(:title, 'Return') %>
<h1>Items Out</h1>

 <table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th> Name </th>
      <th> ChemID </th>
      <th> Date Checked Out </th>
      <th> Return </th>
    </tr>
  </thead>
  <tbody>
    <% Item.all.sort.reverse.each do |item| %>
    <% if(!item.returned) %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.chemID %></td>
      <td><%= item.created_at.to_s.split(' ').shift %></td>
      <td><%=link_to "Return", return_path(item)%></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

